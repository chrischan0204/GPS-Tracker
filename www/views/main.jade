.container
    .row
        .col-md-8.col-md-offset-2
            .login-panel.panel.panel-default
                .panel-heading
                    h3.panel-title Welcome to GPS Thingo

                .panel-body
                    form#login(ng-submit='login()' ng-if='!showRegister')
                        fieldset
                            div.form-group: input.form-control(type='text' ng-model='login_user.email' placeholder='email' ng-required='true')
                            div.form-group: input.form-control(type='password' ng-model='login_user.password' placeholder='password' ng-required='true')
                            div.form-group: input.btn.btn-lg.btn-success.btn-block(type='submit' value='login')
                            div.text-center
                                a(ng-click='clickRegister()') switch to register

                    form#register(ng-submit='register()' ng-if='showRegister' name='registerForm')
                        fieldset
                            div.form-group: input.form-control(type='text' ng-model='register_user.email' placeholder='email' ng-required='true')
                            div.form-group
                                //i.fa.fa-eye#password-reveal(ng-click='togglePasswordShow()')
                                input.form-control(type='password' ng-model='register_user.password' placeholder='password' ng-required='true')
                            div.form-group: input.form-control(type='password' ng-model='register_user.password_again' placeholder='repeat password' ng-required='true')
                            div.form-group: input.btn.btn-lg.btn-success.btn-block(type='submit' value='register')
                            div.text-center
                                a(ng-click='clickLogin()') switch to login

            .panel-body To Use
                ol
                    li Register here
                        br
                        | Don't forget your password as there's no reset yet
                    li Once logged in, add your device's IMEI
                        br
                        | Get this by SMSing the device, instructions in manual
                    li Tell your device to start using gateway 
                        b 59.167.194.239:9000

            .panel-body Notes
                ul
